@using Swazer.ShoppingList.Core;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/plugins/nprogress")
    @Styles.Render("~/plugins/nprogressStyle")

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("Styles", required: false)
    }

    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    @*<link href="@Url.Content("~/Scripts/Admin/plugins/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />*@

    <!-- Primary Inspinia style -->
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/Content/Admincss")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/touchSpinStyles")

    @if (System.Threading.Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        @Styles.Render("~/Content/AdmincssRTL")
    }
    <!-- Section for main scripts render -->
    @Scripts.Render("~/bundles/jquery")
    
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")
    @Scripts.Render("~/bundles/colors")

    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/touchSpin")
    <style>
        .user-panel {
            margin: 60px 0;
            border-color: #006a90;
        }
        .user-panel .panel-heading {
            background-color: #006a90;
            border-color: #006a90;
        }
        .appointment-table {
            margin-top: 40px;
        }
        .btn-mrt {
            margin-top: 20px;
        }
        .btn-mrb {
            margin-bottom: 20px;
        }
        .btn-link {
            color: #f99d20;
        }
    </style>
</head>
<body>
    <div class="device-xs visible-xs"></div>
    <div class="device-sm visible-sm"></div>
    <div class="device-md visible-md"></div>
    <div class="device-lg visible-lg"></div>

    <div id="wrapper" class="@Html.PageClass()">
        @Html.Partial("_Navigation")
        <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">
            @Html.Partial("_TopNavbar")

            <div class="container">
                @RenderBody()
            </div>
            @Html.Partial("_Footer")
        </div>
    </div>
    <script>
        NProgress.start(); // Show the progress bar
        var interval = setInterval(function () { NProgress.inc(); }, 200);    // Increase randomly

        // Trigger finish when page fully loaded
        $(window).load(function () {
            clearInterval(interval);
            NProgress.done();
        });

    </script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        try {
            globalLoginRedirect = '@Url.Action("Login", "Account", new { area = "" })';
        } catch (ex) {}
    </script>
</body>
</html>