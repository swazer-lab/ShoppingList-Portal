@model Swazer.ShoppingList.WebApp.Models.SendCodeViewModel

@{
    ViewBag.Title = AccountStrings.SendCode;
}

<h2>@AccountStrings.SendCode</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@AccountStrings.SendVerificationCode</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @AccountStrings.SelectedTwoFactorAuthentication
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@AccountStrings.SendCode" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
