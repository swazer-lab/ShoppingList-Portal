@model UserProfileViewModel

@{
    ViewBag.Title = "User Profile";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

@Html.Partial("_Breadcrumb", new BreadcrumbModel(new BreadItem("Profile")))

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">
        <div class="col-md-4 col-md-offset-4">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Profile Detail</h5>
                </div>
                <div class="ibox-content no-padding border-left-right">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <img height="200" width="200" alt="image" class="circle-border" src="data:image/jpeg;base64,@Model.Photo" style="padding:10px">
                    }
                    else
                    {
                        <img height="200" width="200" alt="image" class="circle-border" src="~/Content/POS/images/PlaceHolher.jpg" style="padding:10px">
                    }
                </div>
                <div class="ibox-content profile-content">
                    <h5>
                        Name
                    </h5>
                    <p>
                        @Model.Name
                    </p>
                    <h5>
                        Email
                    </h5>
                    <p>
                        @Model.Email
                    </p>
                    <h5>
                        Mobile
                    </h5>
                    <p>
                        @Model.Mobile
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

